<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>GraphQL Extensions to provide Pagination and Search Input types for GraphQL schema.</Description>
    <Authors>Nav Malik</Authors>
    <Copyright>Nav Malik</Copyright>
    <PackageTags>GraphQL GraphQL.Filters GraphQL.Pagination</PackageTags>
    <PackageReleaseNotes>Updated GraphQL Enums for GraphQL 7.x
Upgraded to .Net 6.0 and GraphQL 7.x</PackageReleaseNotes>
    <Version>2.0.0.1</Version>
    <RepositoryUrl>https://github.com/nav-malik/GraphQL.Extension</RepositoryUrl>
    <PackageProjectUrl>https://github.com/nav-malik/GraphQL.Extension</PackageProjectUrl>
    <Title>GraphQL.Extension</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GraphQL" Version="7.2.2" />
  </ItemGroup>

</Project>
