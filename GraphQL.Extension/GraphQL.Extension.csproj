<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>GraphQL Extensions to provide Pagination and Search Input types for GraphQL schema.</Description>
    <Authors>Nav Malik</Authors>
    <Copyright>Nav Malik</Copyright>
    <PackageTags>GraphQL GraphQL.Filters GraphQL.Pagination</PackageTags>
    <PackageReleaseNotes>Major change. 
Added Filter Groups. This allow to create SQL queries with 'Parenthesis' () and separate And/Or groups with () in SQL.
</PackageReleaseNotes>
    <Version>3.1.0.0</Version>
    <RepositoryUrl>https://github.com/nav-malik/GraphQL.Extension</RepositoryUrl>
    <PackageProjectUrl>https://github.com/nav-malik/GraphQL.Extension</PackageProjectUrl>
    <Title>GraphQL.Extension</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GraphQL" Version="7.2.2" />
  </ItemGroup>

</Project>
